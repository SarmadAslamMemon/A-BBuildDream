        <shape>
            <gradient
                android:angle="45"
                android:startColor="#D1223A"
                android:endColor="#FFA3AB"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#E33A52"
                android:endColor="#F15B73"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>







